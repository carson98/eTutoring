{{>sidebarAdmin}}
<!-- Edit Account -->
<div class="layout-content" data-scrollable>
    <div class="container-fluid">

        <ol class="breadcrumb">
            <li><a href="#">{{__ "Home"}}</a></li>
            <li class="active">{{__ "Create tutor"}}</li>
        </ol>

        <div class="card">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#first" data-toggle="tab">{{__ "Upload tutor info"}}</a>
                </li>
            </ul>
            <div class="p-a-2 tab-content">
                <div class="tab-pane active" id="first">
                    {{#if tutor}}
                    <form action="#" class="form-horizontal">
                        <div class="form-group row">
                            <label for="avatar" class="col-sm-3 form-control-label">{{__ "Avatar"}}</label>
                            <div class="col-sm-9">
                                <div class="media">
                                    <div class="media-left">
                                        <div class="icon-block">
                                            <i class="material-icons text-muted-light md-36">photo</i>
                                        </div>
                                    </div>
                                    <div class="media-body media-middle">
                                        <label class="file">
                                            <input type="file" id="file" value="ImagePath">
                                            <span class="file-custom"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="col-sm-3 form-control-label">{{__ "Full Name"}}</label>
                            <div class="col-sm-8">
                                <div class="row">
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" placeholder="First Name" value="Adrian">
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" placeholder="Last Name" value="Demian">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-sm-3 form-control-label">{{__ "Email"}}</label>
                            <div class="col-sm-8 col-md-8">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">
                                        <i class="material-icons md-18 text-muted">mail</i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Email Address"
                                        value="contact@mosaicpro.biz">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-sm-3 form-control-label">{{__ "Password"}}</label>
                            <div class="col-sm-3 col-md-3">
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Password" value="123">
                                </div>
                            </div>
                            <label for="confirmPassword" class="col-sm-2 form-control-label"
                                style="white-space: nowrap">{{__ "Confirm password"}}</label>
                            <div class="col-sm-3 col-md-3">
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Confirm password"
                                        value="123">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="address" class="col-sm-3 form-control-label">{{__ "Address"}}</label>
                            <div class="col-sm-8 col-md-8">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon3">
                                        <i class="material-icons md-18 text-muted">location_on</i>
                                    </span>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="website" class="col-sm-3 form-control-label">{{__ "Phone"}}</label>
                            <div class="col-sm-6 col-md-3">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon2">
                                        <i class="material-icons md-18 text-muted">phone</i>
                                    </span>
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <label for="website" class="col-sm-2 form-control-label">{{__ "Position"}}</label>
                            <div class="col-sm-6 col-md-3">
                                <select name="" id="" class="form-control">
                                    <option value="Tutor">Tutor</option>
                                    <option value="Staff">Staff</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="salary" class="col-sm-3 form-control-label">{{__ "Salary"}}</label>
                            <div class="col-md-8">
                                <div class="" style="width: 100% !important">
                                    <input type="Number" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-12 ">
                                <div class="media ">
                                    <div class="media-left">
                                        <a href="#" type="submit"
                                            class="btn btn-success btn-rounded">{{__ "Save Changes"}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
